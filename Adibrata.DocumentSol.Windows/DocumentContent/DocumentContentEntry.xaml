<Page xmlns:UploadAgreement="clr-namespace:Adibrata.Windows.UserController.DocContent.UploadAgreement;assembly=Adibrata.Windows.UserController" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:DocContent="clr-namespace:Adibrata.Windows.UserController.DocContent;assembly=Adibrata.Windows.UserController" x:Class="Adibrata.DocumentSol.Windows.DocumentContent.DocumentContentEntry" 
      mc:Ignorable="d" 
      d:DesignHeight="500"
	Title="DocumentContentEntry">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid Style="{StaticResource GridStyle}" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto"  />
                <RowDefinition Height="Auto"  />
                <RowDefinition Height="Auto"  />
                <RowDefinition Height="Auto"  />
                <RowDefinition Height="Auto"  />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel>
                    <TextBlock Style="{StaticResource TextBlockStyle}" Name="lblMessage" FontStyle="Normal" Foreground="Red" ></TextBlock>
                    <TextBlock Style="{StaticResource TextBlockStyle}" Text="DOCUMENT UPLOAD" FontSize="24" FontWeight="Bold"></TextBlock>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left">
                <StackPanel>
                    <TextBlock Text="Customer Code" Style="{StaticResource TextBlockStyle}" Width="200"></TextBlock>
                    <TextBlock Text="Customer Name" Style="{StaticResource TextBlockStyle}" Width="200"></TextBlock>
                    <TextBlock Text="Project Code" Style="{StaticResource TextBlockStyle}" Width="200"></TextBlock>
                    <TextBlock Text="Project Name" Style="{StaticResource TextBlockStyle}" Width="200"></TextBlock>
                    <TextBlock Text="Project Type" Style="{StaticResource TextBlockStyle}" Width="200"></TextBlock>

                </StackPanel>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="1">
                <StackPanel>
                    <TextBlock Name="lblCustomerCode" Style="{StaticResource TextBlockStyle}"></TextBlock>
                    <TextBlock Name="lblCustomerName" Style="{StaticResource TextBlockStyle}"></TextBlock>
                    <TextBlock Name="lblProjectName" Style="{StaticResource TextBlockStyle}"></TextBlock>
                    <TextBlock Name="lblProjectCode" Style="{StaticResource TextBlockStyle}"></TextBlock>
                    <TextBlock Name="lblProjectType" Style="{StaticResource TextBlockStyle}"></TextBlock>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="0" Grid.Row="2" HorizontalAlignment="Stretch" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <TextBlock Name="lblDocumentType"  Style="{StaticResource TextBlockStyle}" Text="Document Type" Width="200"></TextBlock>
                </Grid>
                <Grid Grid.Column="1" HorizontalAlignment="Left">
                    <ComboBox Name="cboDocumentType" SelectionChanged="cboDocumentType_SelectionChanged" Width="400"
                       Text="{Binding Result}"   SelectedValue ="{Binding Result}"/>
                </Grid>
                
            </Grid>
            <Grid Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2">
                <Grid>
                    <DocContent:UCDocumentContent x:Name="oDocContent"/>
                </Grid>
            </Grid>

            <Grid Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2">
                <Grid>
                    <UploadAgreement:UCUploadAgreement Name="ucUpload" Width="Auto" Height="Auto" />
                </Grid>
            </Grid>
            <Grid Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">

                    <Button Name="btnSave" Click="btnSave_Click" Width="100" Height="50" ToolTip="Save Data Document Content">
                        <Button.Background>
                            <ImageBrush Stretch="UniformToFill" ImageSource="/Adibrata.DocumentSol.Windows;component/Images/save-png-hi.png"/>
                        </Button.Background>

                    </Button>
                </Grid>
                <Grid Grid.Column="1">
                    <Button Name="btnBack" Click="btnBack_Click" Width="100" Height="50" ToolTip="Back To Project Paging">
                        <Button.Background>
                            <ImageBrush Stretch="UniformToFill" ImageSource="/Adibrata.DocumentSol.Windows;component/Images/back-button-png-hi.png"/>
                        </Button.Background>

                    </Button>
                </Grid>

            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
