<UserControl x:Class="Adibrata.Windows.UserController.Favorite.AddFavorite"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Button HorizontalAlignment="Left" Name="btnFavorite"  VerticalAlignment="Top" Width="75" Height="60" Click="btnFavorite_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Adibrata.Windows.UserController;component/Pictures/favorite.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
    </Grid>
</UserControl>